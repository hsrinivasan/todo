!!!
%html{:lang => "en"}
  %head
    %meta{:charset => "utf-8"}/
    %meta{:content => "IE=Edge,chrome=1", "http-equiv" => "X-UA-Compatible"}/
    %meta{:content => "width=device-width, initial-scale=1.0", :name => "viewport"}/
    %title= content_for?(:title) ? yield(:title) : "Todo"
    = csrf_meta_tags
    = stylesheet_link_tag "application", :media => "all"
    = javascript_include_tag "application"
    / Le HTML5 shim, for IE6-8 support of HTML elements
    /[if lt IE 9]
      <script src="//cdnjs.cloudflare.com/ajax/libs/html5shiv/3.7.2/html5shiv.min.js" type="text/javascript"></script>
  %body
    .wrapper
      .navbar.navbar-default.navbar-static-top
        .container
          %button.navbar-toggle{"data-target" => ".navbar-responsive-collapse", "data-toggle" => "collapse", :type => "button"}
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          %a.navbar-brand{:href => "#"} Todo
          .navbar-collapse.collapse.navbar-responsive-collapse
            %ul.nav.navbar-nav
              %li= link_to "Home", "/"
              %li= link_to "About US", "/path2"
              %li= link_to "Contact US", "/path3"
              - if user_signed_in?
                %li= link_to "Sign out", destroy_user_session_path, :method => :delete
              - else
                %li= link_to "Sign in", new_user_session_path
                %li= link_to "Sign up", new_user_registration_path
      %hr/
      /
        <p class="notice"><haml:loud> notice </haml:loud></p>
        <p class="alert"><haml:loud> alert </haml:loud></p>
      .doclear
        .container
          .row
            .col-lg-12
              = bootstrap_flash
              = yield
          / /row
      / /container
      %hr/
      .navbar.navbar-default
        %footer.container
          %p &copy; CIS-645 2014
